#Rewrite everything to https
RewriteEngine On

RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

RewriteRule ^forum/thread/([0-9]+)/([0-9a-zA-Z_-]+)/([0-9]+) /forum/thread?id=$1&topic=$2&page=$3 [NC]
RewriteRule ^forum/general/([0-9]+) /forum/general?page=$1 [NC]
RewriteRule ^forum/suggestions/([0-9]+) /forum/suggestions?page=$1 [NC]
RewriteRule ^forum/resignations/([0-9]+) /forum/resignations?page=$1 [NC]
RewriteRule ^forum/complaints/([0-9]+) /forum/complaints?page=$1 [NC]
RewriteRule ^forum/introductions/([0-9]+) /forum/introductions?page=$1 [NC]
RewriteRule ^forum/applications/open/([0-9]+) /forum/applications/open?page=$1 [NC]
RewriteRule ^forum/applications/accepted/([0-9]+) /forum/applications/accepted?page=$1 [NC]
RewriteRule ^forum/applications/denied/([0-9]+) /forum/applications/denied?page=$1 [NC]
RewriteRule ^forum/new-topic/([0-9a-zA-Z_-]+) /forum/new-topic?category=$1 [NC]
RewriteRule ^login/profile/([0-9a-zA-Z_-]+) /login/profile?u=$1 [NC]
RewriteRule ^login/message/([0-9]+) /login/message?id=$1 [NC]
RewriteRule ^login/inboxActions/createMessage/([0-9a-zA-Z_-]+) /login/inboxActions/createMessage?to=$1 [NC]
RewriteRule ^babysitting/reviews/([0-9]+) /babysitting/reviews?page=$1 [NC]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

#Errors
ErrorDocument 404 https://www.ryan-simms.com/errors/404error
ErrorDocument 500 https://www.ryan-simms.com/errors/500error
ErrorDocument 503 https://www.ryan-simms.com/errors/503error

#Redirect Home Page
DirectoryIndex about-me.html

